<div class="post_info">
  <p>
    <strong>Title：</strong>
    <%= @post.title %>
  </p>

  <p>
    <strong>Content：</strong>
    <%= @post.text %>
  </p>
</div>

<h2>Comment</h2>
<%= render @post.comments %>

<h2>Add Comment</h2>
<%= render "comments/form" %>

<%= link_to 'Back', posts_path %>
| <%= link_to 'Edit', edit_post_path(@post) %>
